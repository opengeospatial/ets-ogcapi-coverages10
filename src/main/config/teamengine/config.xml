<?xml version="1.0" encoding="UTF-8"?>
<!-- Unpack the *-ctl-scripts.zip archive in the TE_BASE/scripts directory -->
<!-- Add this entry to TE_BASE/config.xml (//organization/standard) -->
<organization>
  <name>OGC</name>
  <standard>
    <name>OGC API - Coverages</name>
    <version>
      <name>${spec-version}</name>
      <suite>
        <namespace-uri>http://www.opengis.net/cite/ogcapi-coverages-1.0</namespace-uri>
        <prefix>tns</prefix>
        <local-name>ets-${ets-code}-${version}</local-name>
        <title>OGC API - Coverages Conformance Test Suite</title>
        <description>Checks OGC API - Coverages implementations for conformance.</description>
        <BasicConformanceClasses>
          <conformanceClass>Core</conformanceClass>
        </BasicConformanceClasses>
      </suite>
      <revision>
        <name>${project.version}</name>
        <status>Beta</status>
        <sources>
          <source>ogcapi-coverages-1.0/${spec-version}/ctl</source>
        </sources>
        <webdir>ogcapi-coverages-1.0/${spec-version}/site</webdir>
      </revision>
    </version>
  </standard>
</organization>
